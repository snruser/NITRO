#
# This file sets up include directories, link directories, and
# compiler settings for a project to use NITRO.  It should not be
# included directly, but rather through the NITRO_USE_FILE setting
# obtained from NITROConfig.cmake.
#

IF(NITRO_BUILD_SETTINGS_FILE AND NOT SKIP_NITRO_BUILD_SETTINGS_FILE)
  INCLUDE(${CMAKE_ROOT}/Modules/CMakeImportBuildSettings.cmake)
  CMAKE_IMPORT_BUILD_SETTINGS(${NITRO_BUILD_SETTINGS_FILE})
ENDIF(NITRO_BUILD_SETTINGS_FILE AND NOT SKIP_NITRO_BUILD_SETTINGS_FILE)

# Add compiler flags needed to use NITRO.
SET(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} ${NITRO_REQUIRED_C_FLAGS}")
SET(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} ${NITRO_REQUIRED_CXX_FLAGS}")
SET(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} ${NITRO_REQUIRED_LINK_FLAGS}")
SET(CMAKE_SHARED_LINKER_FLAGS "${CMAKE_SHARED_LINKER_FLAGS} ${NITRO_REQUIRED_LINK_FLAGS}")
SET(CMAKE_MODULE_LINKER_FLAGS "${CMAKE_MODULE_LINKER_FLAGS} ${NITRO_REQUIRED_LINK_FLAGS}")

# Add include directories needed to use NITRO.
INCLUDE_DIRECTORIES(BEFORE ${NITRO_INCLUDE_DIRS})

# Add link directories needed to use NITRO.
LINK_DIRECTORIES(${NITRO_LIBRARY_DIRS})

